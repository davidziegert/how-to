{% extends 'partials/base.html.twig' %}

{% block main %}
    <main>
        <div class="row">
            <div class="column">
                <article class="blog-article">
                    {# --- Featured Image --- #}
                    {% set image = page.media[page.header.header_image] ?? page.media.images|first %}
                    {% if image %}
                        {{ image.cropZoom(640,360).html|raw }}
                    {% endif %}

                    {# --- Title --- #}
                    <h1>{{ page.title|e }}</h1>

                    {# --- Content --- #}
                    {% block content %}
                        {{ page.content|raw }}
                    {% endblock content %}
                </article>
            </div>
        </div>
    </main>
{% endblock main %}