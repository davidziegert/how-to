<%- include("./partials/head.ejs"); %> <%- include("./partials/header.ejs"); %> <%- include("./partials/nav.ejs"); %>

<main>
  <div class="row">
    <div class="column">
      <h1><%= txt_title %></h1>
      <form action="" method="POST">
        <fieldset>
          <label>ID</label>
          <input type="text" id="id" name="id" value="<%= data._id %>" readonly />

          <label>Year</label>
          <input type="number" id="year" name="year" min="1900" max="2050" value="<%= data._year %>" />

          <label>Title</label>
          <input type="text" id="title" name="title" value="<%= data._title %>" />

          <label>Description</label>
          <textarea id="description" name="description" rows="5" cols="33"><%= data._description %></textarea>
        </fieldset>
        <fieldset>
          <input type="submit" id="update" name="update" formaction="/mysql/update" value="Update" />
          <input type="submit" id="delete" name="delete" formaction="/mysql/delete/" value="Delete" />
        </fieldset>
      </form>
    </div>
  </div>
</main>

<%- include("./partials/footer.ejs"); %>
